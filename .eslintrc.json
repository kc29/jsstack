{
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended"
	],
	"plugins": [
		"flowtype",
		"compat"
	],
	"parser": "babel-eslint",
    "rules": {
        "indent": [2, "tab"],
		"no-tabs": 0,
		"compat/compat": 2
    },
	"env": {
		"browser": true,
		"jest": true
	},
	"settings": {
		"polyfills": ["fetch"]
	}
}